#:import TextInput kivy.uix.textinput.TextInput
<GuessWord>   
    RelativeLayout:
        id:rootlayout
        size: root.width, root.height
        BoxLayout:
            Label:
                id: wordcount
                pos_hint: {'center_x':0.5,'y':0.75}
                size_hint: 0.2,0.2
                text: root.wordcount 
            Label:
                pos_hint: {'center_x':0.5,'y':0.75}
                size_hint: 0.2,0.2
                id: BESTOPTIONS
                text: root.entrophyvaluesbest      
        Button:
            pos_hint: {'center_x':0.5,'y':0.67}
            size_hint: 0.5,0.1
            text: "Click here to start!"
            on_release: root.StartGame()
        GridLayout:
            id: word
            cols:5
            pos_hint:{'center_x':0.5,'y':0.5}
            size_hint:(1,0.15)                    
            TextInput:
                halign: "center"
                font_size: 70
                id: t1
                multiline: False
                focus: True
                on_text:
                    t2.focus = True                    
            TextInput:
                halign: "center"
                font_size: 70
                id: t2 
                multiline: False
                on_text: 
                    t3.focus = True               
            TextInput:
                halign: "center"
                font_size: 70
                id: t3
                multiline: False
                on_text: t4.focus = True 
            TextInput:
                halign: "center"
                font_size: 70
                id: t4
                multiline: False
                on_text: t5.focus = True 
            TextInput:
                halign: "center"
                font_size: 70
                id: t5
                multiline: False
                on_text:
                    if t5.text!="": root.Check()
                    BESTOPTIONS.text=""
                    root.ShowPreviousWord()
                    if root.accurateletters!=5: root.ClearLetters()
                    t1.focus = True
        GridLayout:
            cols:1
            pos_hint:{'center_x':0.5,'y':0.3}
            size_hint:(1,0.2)
            Button: 
                pos_hint:{'center_x':0.5,'y':0.4}
                text: "Check if it's your word!"
                on_press: 
                    root.Check()
                    root.ShowPreviousWord()
                    
                    
        Label:
            pos_hint:{'center_x':0.5,'y':-0.35}
            id: OUTPUT
            markup: True

            
        
        
            
        